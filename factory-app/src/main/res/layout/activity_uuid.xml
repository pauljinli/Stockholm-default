<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/uuid_test"
        android:textSize="64sp"/>

    <TextView
        android:id="@+id/tv_line_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="@string/uuid_test_tip"
        android:gravity="center"
        android:textSize="44sp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_sn"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="220dp"
        tools:background="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignStart="@+id/iv_sn"
        android:layout_below="@+id/iv_sn"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:text="序列号"/>

    <TextView
        android:id="@+id/tv_sn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignStart="@+id/iv_sn"
        android:layout_below="@+id/iv_sn"
        android:layout_marginTop="60dp"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        tools:text="xxxxx"/>

    <ImageView
        android:id="@+id/iv_ble_mac"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="220dp"
        tools:background="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignStart="@+id/iv_ble_mac"
        android:layout_below="@+id/iv_ble_mac"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:text="蓝牙Mac地址"/>

    <TextView
        android:id="@+id/tv_mac"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_alignStart="@+id/iv_ble_mac"
        android:layout_below="@+id/iv_ble_mac"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        tools:text="xx:xx:xx:xx:xx"/>

    <TextView
        android:id="@+id/tv_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="300sp"
        android:textColor="@color/red"
        android:visibility="gone"/>

</RelativeLayout>